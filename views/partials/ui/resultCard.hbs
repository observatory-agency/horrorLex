<a href="/{{this.slug}}">
    <aside class="p-6 rounded-md shadow bg-blackLight">
        <h3 class="text-lg font-bold text-gray-100">{{this.title}}</h3>
        <p class="font-medium text-gray-400">{{this.author}}</p>
        <div class="grid grid-cols-12 gap-4 mt-4 mb-8">
            <div class="flex flex-col items-start col-span-2">
                <p class="text-base font-medium text-gray-600">Year</p>
                <p class="text-lg text-gray-300">{{this.year}}</p>
            </div>
            <div class="flex flex-col items-start col-span-6">
                <p class="text-base font-medium text-gray-600">Original Publisher</p>
                <p class="text-lg text-gray-300">{{this.originalPublisher}}</p>
            </div>
            <div class="flex flex-col items-start col-span-4">
                <p class="text-base font-medium text-gray-600">Updated Edition</p>
                <p class="text-lg text-gray-300">{{this.updatedEdition}}</p>
            </div>
        </div>
    </aside>
</a>
