      <section class="flex-1 mx-auto mt-8 lg:mt-8 max-w-7xl">
        <div class="grid gap-16 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
            {{#posts}}
            <div>
                <p class="text-sm text-gray-500">
                    <time datetime="2021-10-31">{{date}}</time>
                </p>
                <a href="{{slug}}" class="block mt-2">
                    <h4 class="text-xl font-semibold text-white">
                        {{title}}
                    </h4>
                    <p class="mt-3 text-base text-gray-300">
                        {{excerpt}}
                    </p>
                </a>
                <div class="mt-3">
                    <a href="{{slug}}" class="text-base font-semibold text-primaryOrange hover:text-primaryOrangeDark">
                        Read full post
                    </a>
                </div>
            </div>
