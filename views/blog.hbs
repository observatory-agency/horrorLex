        </div>
      </section>
      <section class="flex justify-between flex-none w-full pt-32 mx-auto max-w-7xl">
        {{#if prev}}
        <div class="mt-3">
            <a href="{{prev}}" class="text-base font-semibold text-primaryOrange hover:text-primaryOrangeDark">
                Previous Page
            </a>
        </div>
        {{/if}}
        {{#if next}}
        <div class="mt-3">
            <a href="{{next}}" class="text-base font-semibold text-primaryOrange hover:text-primaryOrangeDark">
                Next Page
            </a>
        </div>
        {{/if}}
